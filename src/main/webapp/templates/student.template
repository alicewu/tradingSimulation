<div class="modal-header">
	<h3>{{email}}</h3>
</div>


<div class="row-fluid">
  	
  	<div class="span6 offset1">
  	
  		<div id="marketNews"></div>
		
  		<div id="studentTimer"></div>
  		
  		<div id="placeholder" style="width:100%;height:300px;"></div>
  		
